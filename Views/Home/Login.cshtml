@{
    ViewBag.Title = "Login";
}
@using MvcApplication3.Models

<br /><br /><br /><br /><br /><br />
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Login for continue</h3>
                </div>
                <div class="panel-body">
                    <form action="/Home/Intermidiate">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="User Name" name="Name" type="text" required autofocus>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Password" name="Password" type="password" required>
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <button type="submit" class="btn btn-lg btn-success btn-block">Login</button>
                            
                        </fieldset>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>
</div>
@if (ViewBag.CheckforLogin == "NotLogin")
{
    <P>Login is not successful!!</P>
}
