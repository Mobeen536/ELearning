@{
    ViewBag.Title = "MakeAssignmentThread";
}

@using MvcApplication3.Models
<div class="row">
    <div class="col-sm-4">
    </div>
    <div class="col-sm-4">
        <h1>Make a Assignment Thread</h1>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Fill Required Fields</h3>
                </div>
                <div class="panel-body">
                    <form id="Announce" role="form" action="/Teacher/Assignment" method="post" enctype="multipart/form-data">
                        <input name="Type" value="Assignment" hidden />
                         <fieldset>
                            <select class="form-control" name="ClassName" form="Announce">
                                @foreach (Class s in Model)
                                {

                                    <option>@s.ClassName</option>

                                }
                            </select>
                            <div class="form-group">
                                <input required class="form-control" placeholder="Topic" name="Topic" type="text">
                            </div>
                            <div class="form-group">
                                <textarea required name="Announce" rows="10" cols="30" placeholder="Enter description"></textarea>
                            </div>

                            <!-- Change this to a button or input when using this as a form -->
                            <button type="submit" class="btn btn-lg btn-success btn-block">Submit</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

