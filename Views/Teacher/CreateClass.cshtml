@{
    ViewBag.Title = "Teacher";
}

<div class="row">
    <div class="col-sm-4">
    </div>
    <div class="col-sm-4">
        <h1>Create Class</h1>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Enter Required information</h3>
                </div>
                <div class="panel-body">
                    <form role="form" action="/Teacher/AddClass">
                        <fieldset>
                            <div class="form-group" >
                                <input required class="form-control" placeholder=" Univeristy Name" name="UniveristyName" type="text" autofocus>
                            </div>
                            <div class="form-group">
                                <input required class="form-control" placeholder="Class Name" name="ClassName" type="text" autofocus>
                            </div>
                            <div class="form-group">
                                <input required class="form-control" placeholder="Class Number" name="ClassNumber" type="text">
                            </div>
                            <div class="form-group">
                                <input required class="form-control" placeholder="Estimeted Enrolment e.g 10,20" name="EstClassEnrolment" type="number">
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <button type="submit" class="btn btn-lg btn-success btn-block">Create </button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
