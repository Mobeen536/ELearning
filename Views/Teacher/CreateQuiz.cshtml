@{
    ViewBag.Title = "Create Quiz";
}

<div class="row">
    <div class="col-sm-4">
    </div>
    <div class="col-sm-4">
        <h1>Create Quiz</h1>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Enter Name of Quiz and No. of Question ></h3>
                </div>
                <div class="panel-body">
                    <form role="form" action="/Teacher/AddQuiz1">
                        <fieldset>
                            <div class="form-group" >
                                <input required class="form-control" placeholder=" Name of Quiz" name="QuizName" type="text" autofocus>
                            </div>
                            <div class="form-group">
                                <input required class="form-control" placeholder="NO of Questions e.g 10,20" name="QNo" type="number">
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <button type="submit" class="btn btn-lg btn-success btn-block">Create </button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
