@{
    ViewBag.Title = "UpdateTeacher";
}


<div class="row">
    <div class="col-sm-4">
    </div>
    <div class="col-sm-4">
        <h1>Update Teacher</h1>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Fill Required Fields</h3>
                </div>
                <div class="panel-body">
                    <form role="form">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="Old Name of Teacher" name="name" type="text" autofocus>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Old E-mail of Teacher" name="email" type="email">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Old Class Name" name="cname" type="text">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="New Name of Teacher" name="name" type="text">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="New E-mail of Teacher" name="email" type="email">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="New Class Name" name="cname" type="text">
                            </div>

                            <!-- Change this to a button or input when using this as a form -->
                            <a href="/Teacher/TeacherMain" class="btn btn-lg btn-success btn-block">Update</a>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<br />