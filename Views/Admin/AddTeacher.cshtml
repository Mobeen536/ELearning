@{
    ViewBag.Title = "AddTeacher";
}

<div class="row">
    <div class="col-sm-4">
    </div>
    <div class="col-sm-4">
        <h1>Add Teacher</h1>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Fill Required Fields</h3>
                </div>
                <div class="panel-body">
                    <form role="form" action="teacher">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="Name of Teacher" name="Name" type="text" autofocus>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="E-mail of Teacher" name="Email" type="email">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Password of Teacher" name="Password" type="password">
                            </div>

                            <!-- Change this to a button or input when using this as a form -->
                            <button class="btn btn-lg btn-success btn-block">Add</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
